<script>
function loadSavedData() {
    const saved = localStorage.getItem('bettingStrategy');
    const container = document.getElementById('savedContainer');
    if(!saved || JSON.parse(saved).length === 0) { 
        container.innerHTML = "<p style='padding:20px; text-align:center; opacity:0.6;'>No hay equipos guardados a√∫n.</p>"; 
        return; 
    }
    const data = JSON.parse(saved);
    let html = `<table><thead><tr><th>Liga</th><th>Equipo</th><th>ROI</th><th>Units</th><th>Rangos Sugeridos</th></tr></thead><tbody>`;
    data.forEach(item => {
        html += `<tr>
            <td>${item.liga}</td>
            <td><b>${item.equipo}</b></td>
            <td style="color:var(--success); font-weight:bold;">${item.roi}</td>
            <td style="color:var(--success);">+${item.unidades}</td>
            <td><span class="range-badge">@${item.minOdd} - @${item.maxOdd}</span></td>
        </tr>`;
    });
    container.innerHTML = html + `</tbody></table>`;
}

function clearSaved() {
    if(confirm("¬øBorrar todos los equipos guardados?")) {
        localStorage.removeItem('bettingStrategy');
        loadSavedData();
    }
}

loadSavedData();
</script>
